<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules.Account_Setting_Pword"
    android:background="@drawable/bg_screen"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_back_account_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account\nSettings"
        android:textAlignment="center"
        style="@style/TextViewTitle"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="#2a95db"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/ButtonInvi"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"
        android:elevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter new password"
            style="@style/EditTextDefault"
            android:textColor="#2a95db"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            style="@style/ButtonCornerDark"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    android:layout_marginTop="8dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_toRightOf="@id/image_username">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edittext_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_username"
                    android:paddingLeft="20dp"
                    android:hint="new password"
                    android:inputType="textPassword"
                    style="@style/ButtonInvi"/>

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-type password"
            style="@style/EditTextDefault"
            android:textColor="#2a95db"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            style="@style/ButtonCornerDark"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    android:layout_marginTop="8dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_toRightOf="@id/image_password">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edittext_retype_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/image_password"
                        android:paddingLeft="20dp"
                        android:hint="re-type password"
                        android:inputType="textPassword"
                        style="@style/ButtonInvi"/>

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter old password"
            style="@style/EditTextDefault"
            android:textColor="#2a95db"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            style="@style/ButtonCornerDark"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_conpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    android:layout_marginTop="8dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:layout_toRightOf="@id/image_conpassword">

                    <EditText
                        android:id="@+id/edittext_password_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/image_conpassword"
                        android:paddingLeft="20dp"
                        android:hint="old password"
                        android:inputType="textPassword"
                        style="@style/ButtonInvi"/>

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_password_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="110dp"
        android:text="submit changes"
        style="@style/ButtonFilledSecondary"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/textview_cancel_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:textAlignment="center"
        style="@style/EditTextDefaultPrimary"
        android:textColor="@color/colorSecondary"
        android:textSize="18sp"/>

</LinearLayout>