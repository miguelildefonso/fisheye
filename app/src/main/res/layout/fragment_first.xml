<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules.Fragments.Walkthrough.Fragments.FirstFragment"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="@color/colorAccent"
    android:gravity="center">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_logo"
        android:layout_marginTop="180dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/TextViewTitle"
        android:textColor="@color/colorPrimaryDark"
        android:text="Welcome to FishEye"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="FishEye will help you monitor your fish pond's
water quality in these easy steps."
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="@color/colorSecondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_intro_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            style="@style/TextViewTitle"
            android:textColor="@color/colorPrimaryDark"
            android:text="Next"
            android:focusable="true"/>


    </LinearLayout>


</LinearLayout>