<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules.Select_Pond"
    android:orientation="vertical"
    android:background="@drawable/bg_screen">

    <ImageView
        android:id="@+id/imageview_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingHorizontal="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello!\nChoose your pond"
            style="@style/TextViewTitle"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/linearlayout_pond1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/button_corner_dark"
                android:layout_marginRight="15dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fish"/>

                <TextView
                    android:id="@+id/textview_pond1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pond 1"
                    android:textAlignment="center"
                    style="@style/EditTextDefault"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout_pond2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/button_corner_dark"
                android:layout_marginLeft="15dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fish"/>

                <TextView
                    android:id="@+id/textview_pond2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pond 2"
                    android:textAlignment="center"
                    style="@style/EditTextDefault"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linearlayout_pond3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/button_corner_dark"
                android:layout_marginRight="15dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fish"/>

                <TextView
                    android:id="@+id/textview_pond3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pond 3"
                    android:textAlignment="center"
                    style="@style/EditTextDefault"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout_pond4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/button_corner_dark"
                android:layout_marginLeft="15dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fish"/>

                <TextView
                    android:id="@+id/textview_pond4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pond 4"
                    android:textAlignment="center"
                    style="@style/EditTextDefault"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>